<%layout("/layouts/boilerplate.ejs")%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    </br>
    <h3>Edit your listing</h3>
    </br>

     <form method="POST", action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
     <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
        <input id="title" name="listing[title]" 
        value="<%=listing.title%>" type="text" 
        class="form-control" required>  
        <div class="invalid-feedback">Invalid</div>
    </div>  

        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>

        <textarea id="description" name="listing[description]" 
        class="form-control" required><%=listing.description%> </textarea>
                        <div class="invalid-feedback">Invalid</div>

        </div>

        <div class="mb-3 ">
            <p>Original Image</p>
            <img src="<%=originalImageUrl%>" class="card-img-top editimage">

         </div>

        <div class="mb-3">
            <lable for="image" class="form-label">Upload Image </lable>

        <input id="image" name="listing[image]"  type="file"
        class="form-control" >
         </div>

    <div class="row">
        <div class="mb-3 col-md-4"> 
            <lable for="price" class="form-label">Price</lable>

        <input name="listing[price]" value="<%=listing.price%>" 
        class="form-control" required>
        <div class="invalid-feedback">Invalid</div>
  
       </div> 
    
        <div class="mb-3 col-md-8">
        <lable name="country" class="form-label">Country</lable>
 
        <input id="country" name="listing[country]" 
        value="<%=listing.country%>" type="text" class="form-control" required> 
         <div class="invalid-feedback">Invalid</div>
        </div>  
    </div>

     <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input id="location" name="listing[location]"
         value="<%=listing.location%>" type="text" class="form-control" required> 
    </div>  
      
                    
<button class="btn btn-dark edit-btn mt-3">Submit</button>
</br></br>

</form>
     </br></br>

    </div>
    </div>
   