<%layout("/layouts/boilerplate")%>
<div class="row mt-3">
      <h3 class="col-4 offset-4 log">Login on NestGuest</h3>
<div class="col-4 offset-4">
 
<form method="POST" actions="/login" class="needs-validation" novalidate>
    <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input id="username" name="username", placeholder="Enter Username", type="text" class="form-control" required >
        <div class="invalid-feedback">Enter your username</div>
    </div>


    <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input id="password" name="password" placeholder="Enter password" type="password" class="form-control" required >
        <div class="invalid-feedback">Enter your password</div>
    </div>


    <button class="btn btn-success">Login</button>

</form>
</div>
</div>
